<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarUkmActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient_daftarukm"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="170dp"
        android:id="@+id/LLInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <!--<EditText-->
            <!--android:id="@+id/etNim"-->
            <!--android:inputType="number"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:drawablePadding="20dp"-->
            <!--android:drawableRight="@drawable/ic_credit_card_black_24dp"-->
            <!--android:hint="UKM"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerUKM"
                android:backgroundTint="@color/colorLightGreen"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="120dp"
                android:layout_height="40dp">
            </Spinner>

            <TextView
                android:id="@+id/txtNamaUKM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="11dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp"
                android:text="Harap Memilih ID UKM" />
        </LinearLayout>

        <EditText
            android:id="@+id/etAlasan"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:hint="Alasan Bergabung"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/btnDaftar"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_daftarukm"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnBackToMenu"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_signin"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="BACK TO DASHBOARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtnotice"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:text="Notice : Anda hanya bisa daftar 1x untuk 1 UKM yang sama, jadi daftarlah dengan serius!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtDaftar"
        android:drawableLeft="@drawable/ic_navigate_next_white_24dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Daftar UKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>