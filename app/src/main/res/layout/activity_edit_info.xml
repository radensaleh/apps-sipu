        <EditText
            android:id="@+id/tvEmail"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvPassword"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:hint="New Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvNoHp"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_phone_iphone_black_24dp"
            android:hint="Nomer HP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvAddress"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_place_black_24dp"
            android:hint="Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSubmit"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_lightblue"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnBackToMenu"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_daftarukm"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="BACK TO DASHBOARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtEditInfo"
        android:drawableLeft="@drawable/ic_edit_white_24dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text=" Edit Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>