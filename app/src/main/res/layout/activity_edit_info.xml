<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditInfoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient_profile"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/LLInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="530dp">

        <EditText
            android:id="@+id/tvNim"
            android:inputType="number"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_credit_card_black_24dp"
            android:hint="NIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvNama"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_person"
            android:hint="Nama Lengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tvProdi"
            android:layout_marginTop="5dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_school_black_24dp"
            android:hint="Program Studi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

