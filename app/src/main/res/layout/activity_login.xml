<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/background_gradient_signin"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="170dp"
        android:id="@+id/LLInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <!--<TextView-->
            <!--android:text="NIM"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <EditText
            android:id="@+id/tvNim"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_credit_card_black_24dp"
            android:hint="NIM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="Email"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <EditText
            android:id="@+id/tvEmail"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:drawableRight="@drawable/ic_mail_outline_black_24dp"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!--<TextView-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:text="Password"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
        <EditText
            android:id="@+id/tvPassword"
            android:layout_marginTop="10dp"
            android:drawablePadding="20dp"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnLogin"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_signin"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:text="SIGN IN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnRegister"
            android:textColor="#FFF"
            android:background="@drawable/rec_gradient_signup"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="SIGN UP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtsignin"
        android:drawableLeft="@drawable/ic_navigate_next_white_24dp"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="Sign In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>